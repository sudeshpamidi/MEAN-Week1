<!DOCTYPE html>
<html lang="en">

<head>
  {{>head}}
</head>


<body id="page-top">
  {{>navbar}}
  <div id="wrapper">
    {{>sidebar}}

    <div id="content-wrapper">
      <div class="container-fluid">
        <div class="card card-login mx-auto mt-5">
          <div class="card-header">Login</div>
          <div class="card-body">
            <form id="frmLogin">
              <div class="form-group">
                {{!-- <div class="form-label-group"> --}}
                  <i class="fa fa-user" aria-hidden="true"></i>
                  <input type="text" id="username" name="username"  required="required" class="form-control" placeholder="User name/Email address"
                    autofocus="autofocus" data-role="validate" data-content="Username/Email is required.">
                  {{!-- <label for="username">User name/Email address</label> 
                </div>--}}
              </div>
              <div class="form-group">
                {{!-- <div class="form-label-group"> --}}
                  <i class="fa fa-lock"></i>
                  <input type="password" id="password" name="password" class="form-control" placeholder="Password"
                    required="required" data-role="validate" data-content="Password is required.">
                  {{!-- <label for="password">Password</label>
                </div> --}}
              </div>
              <div class="form-group">
                <div class="checkbox">
                  <label>
                    <input type="checkbox" value="remember-me" id="rememberMe">
                    Remember Me
                  </label>
                </div>
              </div>
              <button class="btn btn-primary btn-block" type ="submit" id="btnLogin">Login</button>
            </form>
            <div class="text-center">
              <a class="d-block small mt-3" href="/users/register">Register an Account</a>
              {{!-- <a class="d-block small" href="forgot-password.html">Forgot Password?</a> --}}
            </div>
            <div class="alert text-center">
            </div>
          </div>
        </div>
        {{!-- </div> --}}

      </div>
    </div>
  </div>
  {{>scripts}}
  <script src="/javascripts/login.js"></script>
  <script src="/javascripts/validation.js"></script>
</body>

</html>